<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:spp="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlackOpacity180"
        tools:context=".fragment_dialog.DialogInputUsernameFragment">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            spp:cardCornerRadius="@dimen/_10sdp"
            spp:cardElevation="@dimen/_10sdp"
            android:layout_margin="@dimen/_20sdp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/_10sdp">

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Tulis jenengmu dhisik"
                      android:gravity="center"
                      android:textSize="@dimen/_14sdp"/>

            <EditText
                    android:id="@+id/diuf_edt_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tulis jenengmu ning kene"
                    android:textSize="@dimen/_12sdp"
                    android:padding="@dimen/_10sdp"
                    android:maxLength="6"
                    android:background="@drawable/background_border_black"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"/>

            <Button
                    android:id="@+id/diuf_btn_start_quiz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mulai Kuis"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>