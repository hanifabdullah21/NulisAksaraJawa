<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorBlackOpacity155"
        tools:context=".fragment_dialog.DialogAddDataFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

        <TextView
                android:id="@+id/daaf_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Jawabanmu bener !!!"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center_horizontal"/>

        <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/daaf_lottie_animation"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                app:lottie_loop="true"
                android:layout_margin="@dimen/_10sdp"/>

        <Button
                android:id="@+id/daaf_btn_repeat"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:text="@string/string_fdaa_btn_repeat"/>

        <Button
                android:id="@+id/daaf_btn_change_aksara"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:text="@string/string_fdaa_btn_change_item"/>

    </LinearLayout>

</FrameLayout>