<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/jungle_dua"
        tools:context=".activity.MenuActivity">

    <ImageView
            android:id="@+id/mea_iv_title_menu"
            android:layout_marginTop="@dimen/_minus15sdp"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="@dimen/_130sdp"
            android:src="@drawable/dahan_pohon"/>

    <ImageView
            android:id="@+id/mea_iv_about_app"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_180sdp"
            android:src="@drawable/ic_about_app"
            android:layout_marginTop="@dimen/_minus20sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_alignParentRight="true"/>

    <ImageView
            android:id="@+id/mea_iv_sinau_nulis"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="@dimen/_140sdp"
            android:src="@drawable/ic_sinau_nulis"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_centerInParent="true"/>

    <ImageView
            android:layout_alignParentBottom="true"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_170sdp"
            android:src="@drawable/ic_kuis"
            android:id="@+id/mea_iv_quiz"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"/>

    <ImageView
            android:id="@+id/mea_iv_highscore"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_170sdp"
            android:src="@drawable/ic_high_score"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_20sdp"/>

</RelativeLayout>