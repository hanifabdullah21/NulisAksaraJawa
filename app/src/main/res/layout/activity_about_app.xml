<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_30sdp"
        android:background="@drawable/background"
        tools:context=".activity.AboutAppActivity">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Tentang Aplikasi"
              android:id="@+id/aaa_tv_title"
              android:layout_centerHorizontal="true"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Aplikasi Sinau Aksaa Jawa ini merupakan sebuah aplikasi pembelajaran penulisan aksara Jawa dengan metode klasifikasi K-Nearest Neighbour. Aplikasi ini dibuat dengan tujuan menyelesaikan Tugas Akhir untuk perkuliahan."
              android:fontFamily="sans-serif"
              android:gravity="center"
              android:id="@+id/aaa_tv_desc_app"
              android:layout_below="@id/aaa_tv_title"
              android:layout_marginTop="@dimen/_50sdp"/>

    <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:id="@+id/aaa_iv_photo"
            android:layout_centerHorizontal="true"
            android:src="@drawable/gilang_photo"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_below="@id/aaa_tv_desc_app"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:text="Aplikasi ini dibuat oleh : \n    Nama : Gilang Raharjito \n    NIM : A11.2015.08783"
              android:layout_below="@id/aaa_iv_photo"
              android:layout_marginTop="@dimen/_20sdp"
              android:fontFamily="sans-serif"/>


</RelativeLayout>